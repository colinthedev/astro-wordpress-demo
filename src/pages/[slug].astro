---
import '../styles/global.css'

import Header from '../components/Header.astro';
import { getAllPagesWithSlugs, getPageBySlug } from '../lib/api';

export async function getStaticPaths() {
  const pagesWithSlugs = await getAllPagesWithSlugs();
		console.log(pagesWithSlugs)
  return pagesWithSlugs.edges.map(({ node }) => {
    return {
      params: { slug: node.slug },
    };
  }); 
}

const { slug } = Astro.params;
let page = await getPageBySlug(slug);

---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{page.title}</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
		<Header />
		<main>
			<div class="flex flex-col p-10">
				<div class="mb-5 text-4xl font-bold">{page.title}</div>
				<article class="prose lg:prose-xl">
					<div set:html={page.content}></div>
				</article>
			</div>
		</main>
  </body>
</html> 